class Person:
    def __init__(self, name, country, birth_year):
        self.name = name
        self.country = country
        self.birth_year = birth_year

    def get_age(self, current_year):
        return current_year - self.birth_year


person = Person("Usman", "Pakistan", 1995)
current_year = 2025  
print(f"{person.name} from {person.country} is {person.get_age(current_year)} years old.")